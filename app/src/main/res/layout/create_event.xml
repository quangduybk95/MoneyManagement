<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EEEEEE"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/input_form"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical">
<TextView
    android:layout_gravity="center"
    android:text="Tạo sự kiện"
    android:textColor="#0700cc"
    android:textSize="25dp"
    android:textStyle="bold"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:id="@+id/input_event_name"
        android:layout_margin="10dp"
        android:hint="Tên sự kiện"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/text1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:text="Ngày"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:layout_alignParentTop="true"
            android:text="1/1/2015"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/text1"
            android:id="@+id/display_day"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="50dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="wrap_content">
        <TextView
            android:cursorVisible="true"
            android:textSize="18sp"
            android:text="Bắt đầu"
            android:focusableInTouchMode="true"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/show_time_start"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="00:00"
            android:textStyle="bold"
            />
        <Button
            android:textSize="15sp"
            android:id="@+id/set_time_start"
            android:background="#00B0ff"
            android:text="Sửa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="wrap_content">
        <TextView
            android:cursorVisible="true"
            android:textSize="18sp"
            android:text="Kết thúc"
            android:focusableInTouchMode="true"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/show_time_finish"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="00:00"
            android:textStyle="bold"
            />
        <Button
            android:textSize="15sp"
            android:id="@+id/set_time_end"
            android:background="#00B0ff"
            android:text="Sửa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1"
            />
    </LinearLayout>
    <TextView
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"
        android:text="Mời bạn nhập số tiền ước tính"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="wrap_content">
        <EditText
            android:cursorVisible="true"
            android:textSize="18sp"
            android:focusableInTouchMode="true"
            android:id="@+id/input_money"
            android:maxLines="1"
            android:inputType="number"
            android:hint="Nhập số tiền"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VNĐ"
            android:textStyle="bold"
            />
        <Button
            android:textColor="#fff"
            android:textSize="15sp"
            android:id="@+id/set_money"
            android:background="#00B0ff"
            android:text="Sửa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            />
    </LinearLayout>
</LinearLayout>
    <Button
        android:id="@+id/submit"
        android:textColor="#fff"
        android:background="#00C853"
        android:layout_gravity="center"
        android:text="Hoàn thành"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_above="@+id/input_form"
        android:layout_height="60dp" />
  </RelativeLayout>
